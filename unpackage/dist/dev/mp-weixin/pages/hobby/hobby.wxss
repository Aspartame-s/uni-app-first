.container {
  width: 100%;
  height: auto;
  background-color: #fff;
  min-height: 100vh;
  background-image: url("https://sezb-1301658904.cos.ap-nanjing.myqcloud.com/view/hobby/hobby_bg@2x.png");
  background-size: 100%;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .placeholder {
  margin-bottom: 180rpx;
}
.container .title {
  width: 100%;
  font-size: 44rpx;
  text-align: center;
  color: #1E1E20;
  margin-bottom: 100rpx;
}
.container .hobby-container {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  padding-left: 88rpx;
  margin-bottom: 144rpx;
}
.container .hobby-container .hobby-item {
  width: 124rpx;
  height: 188rpx;
  margin-right: 102rpx;
  margin-bottom: 24rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  color: #1E1E20;
  font-size: 32rpx;
}
.container .hobby-container .hobby-item:nth-child(3) {
  margin-right: 0;
}
.container .hobby-container .hobby-item:nth-child(6) {
  margin-right: 0;
}
.container .hobby-container .hobby-item:nth-child(9) {
  margin-right: 0;
}
.container .hobby-container .hobby-item .hobby-icon-container {
  width: 100%;
  height: 124rpx;
  position: relative;
}
.container .hobby-container .hobby-item .hobby-icon-container .hobby-icon {
  width: 100%;
  height: 100%;
}
.container .hobby-container .hobby-item .hobby-icon-container .icon-xuanzhong {
  color: #febf54;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 32rpx;
}
.container .selected {
  width: 280rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #EB9A15;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

