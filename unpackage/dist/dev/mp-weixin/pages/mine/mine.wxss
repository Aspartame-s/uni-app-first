/* 水平间距 */
::-webkit-scrollbar {
  display: none;
}
.container {
  width: 100%;
  height: auto;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-image: url("https://sezb-1301658904.cos.ap-nanjing.myqcloud.com/view/my/wodebeijing.png");
  background-repeat: no-repeat;
  background-size: 100%;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
}
.container .user-container {
  width: 100%;
  height: auto;
  min-height: 200rpx;
  padding-left: 30rpx;
}
.container .user-container .user-info {
  height: 148rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-weight: 500;
  margin-bottom: 34rpx;
}
.container .user-container .user-info .user-avatar {
  width: 148rpx;
  height: 148rpx;
  margin-right: 28rpx;
  background-color: #fff;
}
.container .user-container .user-info .user-name-refresh {
  width: auto;
  height: 148rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container .user-container .user-info .user-name-refresh .name {
  font-size: 46rpx;
}
.container .user-container .user-info .user-name-refresh .refresh .icon-shuaxin {
  font-size: 40rpx;
  color: #fff;
  font-weight: 600;
}
.container .user-container .user-viewcount-course {
  width: 100%;
  padding-left: 8rpx;
  display: flex;
  color: #fff;
  font-weight: 400;
  margin-bottom: 42rpx;
}
.container .user-container .user-viewcount-course .user-viewcount-course-item {
  width: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-right: 56rpx;
}
.container .user-container .user-viewcount-course .user-viewcount-course-item .item-top {
  font-size: 44rpx;
  font-weight: 500;
}
.container .user-container .user-viewcount-course .user-viewcount-course-item .item-bottom {
  font-size: 28rpx;
}
.container .other-container {
  width: 100%;
  flex-grow: 1;
  background-color: #fff;
  border-radius: 52rpx 52rpx 0 0;
  padding: 52rpx 0 0;
}
.container .other-container .history-more {
  width: 100%;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .other-container .history-more .history {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.container .other-container .history-more .more {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}
.container .other-container .history-more .more .icon-you {
  margin-left: 12rpx;
  font-size: 32rpx;
}
.container .other-container .box {
  display: flex;
  overflow: auto;
}
.container .other-container .box .historyList-container {
  height: auto;
  min-height: 340rpx;
  overflow: visible;
  display: flex;
  padding: 36rpx 0 0 28rpx;
}
.container .other-container .box .historyList-container .historyList-item {
  flex-shrink: 0;
  width: 260rpx;
  height: 256rpx;
  border-radius: 16rpx;
  margin-right: 28rpx;
  box-shadow: 0rpx 8rpx 44rpx 2rpx rgba(0, 0, 0, 0.08);
}
.container .other-container .box .historyList-container .historyList-item .historyList-item-top {
  width: 100%;
  height: 120rpx;
}
.container .other-container .box .historyList-container .historyList-item .historyList-item-bottom {
  width: 100%;
  padding: 26rpx 18rpx 0;
  color: #333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .other-container .base-info-item {
  width: 100%;
  height: 44rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #353535;
  margin-bottom: 44rpx;
}
.container .other-container .base-info-item .base-info-left {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.container .other-container .base-info-item .base-info-left .base-info-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 32rpx;
}
.container .other-container .base-info-item .icon-you2 {
  font-size: 32rpx;
}

