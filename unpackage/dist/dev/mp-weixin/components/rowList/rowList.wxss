.list-row-container {
  /* background-color: pink; */
  width: 100%;
  height: 208rpx;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}
.container-left {
  width: 320rpx;
  height: 208rpx;
  border-radius: 16rpx;
  overflow: hidden;
